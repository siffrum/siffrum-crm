<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<LangVersion>11.0</LangVersion>
		<Nullable>disable</Nullable>
		<Configurations>Debug;Release;Dev</Configurations>
	</PropertyGroup>

	<ItemGroup>
		<Reference Include="Reno.Web.Foundation.ServiceModels">
			<HintPath>..\..\ReferenceDlls\Reno.Web.Foundation.ServiceModels.dll</HintPath>
		</Reference>
		<Reference Include="Reno.Web.Foundation.Config">
			<HintPath>..\..\ReferenceDlls\Reno.Web.Foundation.Config.dll</HintPath>
		</Reference>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Newtonsoft.Json" Version="13.0.2" />
	</ItemGroup>

	<Target Name="PostBuild" AfterTargets="PostBuildEvent">
		<Exec Command="if $(ConfigurationName) == Dev ( call $(SolutionDir)DevCopyToTargetFolders.bat $(Version) $(TargetDir) $(TargetName))" />
	</Target>

</Project>
